@model IEnumerable<Blog>
<div class="tech-btm">
    <h3>Son Gönderiler</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a asp-action = "Details" asp-controller = "Blog" asp-route-id = "@item.Id">
                    <img src="@item.Image" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a asp-action = "Details" asp-controller = "Blog" asp-route-id = "@item.Id">@item.Content</a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock">@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy")))</i>
                    </span>
                </div>
            </div>
        </div>
    }
</div>