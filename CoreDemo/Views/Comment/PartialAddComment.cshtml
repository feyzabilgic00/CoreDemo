<div class="comment-top">
    <h4>Bir yorum yapın</h4>
    <div class="comment-bottom">
        @using (Html.BeginForm("PartialAddComment", "Comment", FormMethod.Post))
        {
            <input class="form-control" type="text" name="UserName" placeholder="Ad Soyad" required="">
            <input class="form-control" type="text" name="Title" placeholder="Konu" required="">            

            <textarea class="form-control" name="Content" placeholder="Yorumunuz..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Yorum Yap</button>
        }
    </div>
</div>