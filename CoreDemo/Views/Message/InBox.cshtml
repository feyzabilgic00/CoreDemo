@model IEnumerable<Message>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<h3>Gelen Kutusu</h3>

<table class = "table table-bordered">
    <tr>
        <th> # </th>
        <th> Konu </th>
        <th> Gönderen </th>
        <th> Tarih </th>
        <th> Mesajı Aç </th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
          <th>@item.Id</th>
          <td>@item.Subject</td>
          <td>@item.SenderUser.Name</td>
          <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>          
          <td>@item.Status</td>
          <td><a asp-action = "MessageDetails" asp-controller = "Message" asp-route-id = "@item.Id" class = "btn btn-danger btn-sm">Mesajı Aç</a></td>
      </tr>  
    }
</table>
<a asp-action = "AddMessage" asp-controller = "Message" class = "btn btn-primary">Yeni Mesaj Oluştur</a>